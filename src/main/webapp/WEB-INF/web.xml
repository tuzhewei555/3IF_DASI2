<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ActionServlet</servlet-name>
        <servlet-class>fr.insa.dasi2.ActionServlet</servlet-class>
    </servlet>
    
    <!-- Accueil -->
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/vues/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/vues/home</url-pattern>
    </servlet-mapping>
    
    <!-- Liste des activités -->
    <servlet>
        <servlet-name>activites_all</servlet-name>
        <jsp-file>/vues/activites/all.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>activites_all</servlet-name>
        <url-pattern>/vues/activites/all</url-pattern>
    </servlet-mapping>
    
    <!-- Activité en particulier -->
    <servlet>
        <servlet-name>activites_id</servlet-name>
        <jsp-file>/vues/activites/id.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>activites_id</servlet-name>
        <url-pattern>/vues/activites/id</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ActionServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
